<div class='home-container'>

  <div class='header-video-container'>
    <%= video_tag ["invention-drxzzl.mp4", "invention-drxzzl.webm"], controls: false, autoplay: true, muted: true, loop: true, class: "header-video" %>
  </div>

  <div class='home-contact-button-container wrapper'>
    <button class='js-contact-modal-trigger contact-button'>Contact</button>
  </div>

  <div class='home-videos-wrapper wrapper'>
    <% @home_videos.each do |video| %>
      <div class='home-video-container'>
        <header class='home-video-title'><%= video.title %></header>

        <div style="padding:56.25% 0 0 0;position:relative;background-color: black;">
          <iframe src="https://player.vimeo.com/video/<%= video.vimeo_reference %>?color=f07e12&title=0&byline=0&portrait=0" style="position:absolute;top:0;left:0;width:100%;height:100%;" frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen></iframe>
        </div>

        <p class='home-video-description'><%= video.presentation %></p>
      </div>
    <% end %>
  </div>

  <div class='home-contact-button-container wrapper'>
    <button class='js-contact-modal-trigger contact-button'>Contact</button>
  </div>

  <header class='home-texts-header wrapper'>Historique Pixis</header>

  <div class='home-texts-wrapper wrapper'>
    <% @home_texts.each do |text| %>
      <div class='home-text-container'>
        <%= text.content %>
      </div>
    <% end %>
  </div>

  <div class='home-contact-button-container wrapper'>
    <button class='js-contact-modal-trigger contact-button'>Contact</button>
  </div>

  <%= render "contact_modal" %>
</div>
